<!DOCTYPE html>
<html>
  <head>
    <%= display_meta_tags default_meta_tags %>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= favicon_link_tag "favicon@2x.png", type: "image/png", rel: "icon", sizes: '32x32' %>
    <%= favicon_link_tag "favicon@1x.png", type: "image/png", rel: "icon", sizes: '16x16' %>
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1" />
  </head>
  <body>
    <div class="wrapper">
      <% if notice %>
      <div class="notice"><%= notice %></div>
      <% end %>
      <% if alert %>
        <div class="alert"><%= alert %></div>
      <% end %>
      <div class="navbar <%= current_page?(root_path) ? '' : 'is-sticky'%> row">
        <div class="container">
          <%= link_to image_tag('logo.png', height: 24, class: 'logo'), root_path%>
          <%= link_to image_tag('logo_inverse.png', height: 24, class: 'logo inverse'), root_path%>
          <ul class="navigation">
            <li><a href="/">Home</a></li>
            <li><a href="/features">Features</a></li>
            <li><a href="/download" data-action="scroll">Download</a></li>
            <% if current_user %>
              <li><%= link_to 'Dashboard', dashboard_path %></li>
            <% else %>
              <li><%= link_to 'Login', new_user_session_path %></li>
              <li><%= link_to 'Sign up', new_user_registration_path %></li>
            <% end %>
          </ul>
        </div>
      </div>
      <%= yield %>
    </div>
    <%= render partial: 'footer' %>
    <%= render partial: 'metrika' if Settings.metrika %>
  </body>
</html>
