<!DOCTYPE html>
<html>
  <head>
    <%= display_meta_tags default_meta_tags %>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= favicon_link_tag "favicon@2x.png", type: "image/png", rel: "icon", sizes: '32x32' %>
    <%= favicon_link_tag "favicon@1x.png", type: "image/png", rel: "icon", sizes: '16x16' %>
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1" />
    <%= render partial: 'google_analytics' if Settings.analytics %>
  </head>
  <body>
    <%= render partial: 'alerts' %>
    <div class="wrapper">
      <div class="splash">
        <div class="topbar">
          <%= link_to image_tag('logo.png', height: 30, class: 'logo'), root_path %>
          <%= render partial: 'navigation' %>
        </div>
        <%= yield %>
      </div>
    </div>
    <%= render partial: 'footer' unless @skip_footer %>
  </body>
</html>
